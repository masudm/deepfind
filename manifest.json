{
  "manifest_version": 3,
  "name": "Deepfind",
  "description": "A super powered find in page (CTRL+F) alternative",
  "version": "1.0",
  "action": {
    "default_popup": "src/popup/main.html",
    "default_icon": "hello_extensions.png"
  },
  "permissions": ["activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+F",
        "mac": "Command+F"
      }
    }
  },
  "content_scripts": [
    {
      "js": ["src/scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "omnibox": {
    "keyword": "find"
  },
  "offline_enabled": true
}
